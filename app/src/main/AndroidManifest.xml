<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.bur.cometogetherandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Authorization"
            android:label="Авторизация"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeetingScroller"
            android:label="@string/title_activity_meeting_scroller"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Participants"
            android:label="Участники встречи"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateMeeting"
            android:label="Создание встречи"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowMeeting"
            android:label="Просмотр встречи"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserProfile"
            android:label="Ваш профиль"
            android:screenOrientation="portrait" />


    </application>

</manifest>