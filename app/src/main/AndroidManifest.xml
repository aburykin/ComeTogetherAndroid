<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.bur.cometogetherandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AuthorizationActivity"
            android:label="Авторизация">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeetingScrollerActivity"
            android:label="@string/title_activity_meeting_scroller" />
        <activity
            android:name=".ParticipantsActivity"
            android:label="Участники встречи" />
        <activity
            android:name=".CreateMeeting"
            android:label="Создание встречи" />
        <activity android:name=".ShowMeeting"  android:label="Просмотр встречи"></activity>
    </application>

</manifest>